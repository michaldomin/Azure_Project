@page
@model RegisterModel

<div class="container">
    <h2>Register</h2>
    <form method="post">
        <div class="mb-3">
            <label asp-for="NewUser.Username" class="form-label"></label>
            <input asp-for="NewUser.Username" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="NewUser.Password" class="form-label"></label>
            <input asp-for="NewUser.Password" class="form-control" type="password" />
        </div>
        <button type="submit" class="btn btn-primary">Register</button>
    </form>
</div>